<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= first_name %> <%= last_name %>'s Profile</title>
    <% include ./partials/jQuery.ejs %>
    <% include ./partials/materialize.ejs %>
    <link rel="stylesheet" href="/style.css">

    <script type="text/javascript" src="/script.js"></script>

  </head>
  <body>
    <% include ./partials/navbar.ejs %>

    <a id="go-back-button" href="/users" class="btn"><i id="go-back-icon" class="material-icons">navigate_before</i>Go Back</a>

    <div class="user-profile container center">
      <table class="highlight">
        <thead>
          <tr>
            <td>ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Age</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= id %></td>
            <td><%= first_name %></td>
            <td><%= last_name %></td>
            <td><%= email %></td>
            <td><%= age %></td>
          </tr>
        </tbody>
      </table>
      <a class="btn" href="/users/<%= id %>/edit"><i class="material-icons">edit</i>Edit</a>

      <a class="btn red modal-trigger" href="#modal1"><i class="material-icons">delete_forever</i>Delete</a>
    </div>

    <!-- Modal Structure -->
    <div id="modal1" class="modal">
      <div class="modal-content">
        <h4><i class="material-icons">warning</i></h4>
        <p>Are you sure you would like to delete this user?</p>
      </div>
      <div class="modal-footer">
        <a href="/users/<%= id %>/delete" class="waves-effect waves-green   btn-flat red-text">Yes</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-green   btn-flat">No</a>
      </div>
    </div>

  </body>
</html>
